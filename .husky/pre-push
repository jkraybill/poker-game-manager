#!/bin/sh

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "ğŸš€ Running pre-push validation..."

# Run lint
echo "ğŸ” Final ESLint check..."
npm run lint > /dev/null 2>&1
if [ $? -ne 0 ]; then
  echo "${RED}âŒ ESLint errors detected!${NC}"
  echo "Running full lint to show errors:"
  npm run lint
  echo "${YELLOW}ğŸ’¡ Fix these before pushing to avoid CI failures${NC}"
  exit 1
fi
echo "${GREEN}âœ… ESLint clean${NC}"

# Run tests
echo "ğŸ§ª Final test run..."
npm test > /dev/null 2>&1
if [ $? -ne 0 ]; then
  echo "${RED}âŒ Tests are failing!${NC}"
  echo "Running full test suite to show failures:"
  npm test
  echo "${YELLOW}ğŸ’¡ Fix these before pushing to avoid CI failures${NC}"
  exit 1
fi
echo "${GREEN}âœ… All tests passing${NC}"

echo "${GREEN}ğŸ‰ All checks passed! Pushing to remote...${NC}"